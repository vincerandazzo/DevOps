<div id="contactUs" class="pad-section">
    <div class="container">
        <h2 class="text-center">CONTACT US</h2>
        @{
            using (Html.BeginForm("SubmitContactUsForm", "Home", new { @class = "contactForm" }))
            {

                <div class='form-group'>
                    @Html.LabelFor(m => m.Name)<br />
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "YOUR NAME", maxlength = "50" })
                    @Html.ValidationMessageFor(m => m.Name)
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Email)<br />
                    @Html.TextBoxFor(m => m.Email, new { type = "text", @class = "form-control ", placeholder = "YOUR E-MAIL", maxlength = "50" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Message)<br />
                    @Html.TextAreaFor(m => m.Message, new { placeholder = "YOUR MESSAGE", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Message)
                </div>
                <button type="submit" class="btn btn-primary submitButtonStyling">Send Message</button>
            }
        }
    </div>
</div>
